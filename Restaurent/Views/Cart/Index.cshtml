@model Restaurent.ViewModels.CartSummaryVM

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-4">
    <h2><i class="fas fa-shopping-cart"></i> Shopping Cart</h2>

    @if (!Model.CartItems.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-cart-arrow-down fa-3x mb-3"></i>
            <h4>Your cart is empty</h4>
            <p>Start adding some delicious items to your cart!</p>
            <a asp-controller="MenuProduct" asp-action="GetAll" class="btn btn-primary">
                <i class="fas fa-utensils"></i> Browse Menu
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                @foreach (var item in Model.CartItems)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-2">
                                    <img src="@item.ImageUrl" alt="@item.ProductName"
                                         class="img-fluid rounded"
                                         onerror="this.src='/images/default.png'">
                                </div>
                                <div class="col-md-4">
                                    <h5>@item.ProductName</h5>
                                    <p class="text-muted mb-0">@item.Price.ToString("C2") each</p>
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <button class="btn btn-outline-secondary"
                                                onclick="updateQuantity(@item.Id, @item.Quantity - 1)">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                        <input type="number" class="form-control text-center"
                                               value="@item.Quantity" min="1"
                                               onchange="updateQuantity(@item.Id, this.value)"
                                               id="quantity-@item.Id">
                                        <button class="btn btn-outline-secondary"
                                                onclick="updateQuantity(@item.Id, @item.Quantity + 1)">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <h5 class="text-success">@item.Total.ToString("C2")</h5>
                                </div>
                                <div class="col-md-1">
                                    <button class="btn btn-danger btn-sm"
                                            onclick="removeFromCart(@item.Id)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-receipt"></i> Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span id="subtotal">@Model.SubTotal.ToString("C2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Total:</span>
                            <span id="total" class="fw-bold fs-5">@Model.Total.ToString("C2")</span>
                        </div>
                        <div class="d-grid">
                            <a asp-controller="Order" asp-action="Checkout"
                               class="btn btn-success btn-lg">
                                <i class="fas fa-credit-card"></i> Proceed to Checkout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function updateQuantity(cartId, newQuantity) {
            if (newQuantity < 1) {
                removeFromCart(cartId);
                return;
            }

            $.post('@Url.Action("UpdateQuantity", "Cart")', {
                cartId: cartId,
                quantity: parseInt(newQuantity)
            }, function(data) {
                if (data.success) {
                    location.reload();
                } else {
                    showAlert('error', data.message);
                }
            });
        }

        function removeFromCart(cartId) {
            if (confirm('Are you sure you want to remove this item from your cart?')) {
                $.post('@Url.Action("RemoveFromCart", "Cart")', {
                    cartId: cartId
                }, function(data) {
                    if (data.success) {
                        location.reload();
                    } else {
                        showAlert('error', data.message);
                    }
                });
            }
        }
    </script>
}