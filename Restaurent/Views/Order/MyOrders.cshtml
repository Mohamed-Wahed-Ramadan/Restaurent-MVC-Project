@model List<Restaurent.ViewModels.OrderVM>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-4">
    <h2><i class="fas fa-clipboard-list"></i> My Orders</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-clipboard-list fa-3x mb-3"></i>
            <h4>No orders yet</h4>
            <p>Start ordering some delicious food!</p>
            <a asp-controller="MenuProduct" asp-action="GetAll" class="btn btn-primary">
                <i class="fas fa-utensils"></i> Browse Menu
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                @foreach (var order in Model)
                {
                    <div class="card mb-4">
                        <div class="card-header bg-light d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-0">Order: @order.UniqueOrderId</h5>
                                <small class="text-muted">@order.CreatedAt.ToString("f")</small>
                            </div>
                            <div class="d-flex align-items-center gap-3">
                                <span class="badge bg-@GetStatusBadgeClass(order.Status)">@order.Status</span>
                                <span class="badge bg-secondary">@order.OrderType</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="row">
                                        @foreach (var item in order.OrderItems.Take(3))
                                        {
                                            <div class="col-md-4 mb-2">
                                                <div class="d-flex align-items-center">
                                                    <img src="@item.ImageUrl" alt="@item.ProductName"
                                                         class="img-thumbnail me-2" style="width: 40px; height: 40px;"
                                                         onerror="this.src='/images/default.png'">
                                                    <div>
                                                        <small class="fw-bold">@item.ProductName</small>
                                                        <br>
                                                        <small class="text-muted">@item.Quantity x @item.UnitPrice.ToString("N2") SAR</small>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        @if (order.OrderItems.Count > 3)
                                        {
                                            <div class="col-md-4 mb-2">
                                                <div class="d-flex align-items-center justify-content-center h-100">
                                                    <span class="text-muted">+@(order.OrderItems.Count - 3) more items</span>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="d-flex justify-content-between mb-2">
                                        <strong>Total:</strong>
                                        <strong class="text-success">@order.Total.ToString("N2") SAR</strong>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <small>Location:</small>
                                        <small>@order.Location</small>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <small>Estimated Time:</small>
                                        <small>@order.EstimatedTime minutes</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    @if (order.OrderType == "Delivery")
                                    {
                                        <i class="fas fa-truck"></i>
                                        <text>Delivery to: @order.Location</text>
                                    }
                                    else
                                    {
                                        <i class="fas fa-utensils"></i>
                                        <text>Table: @order.Location.Replace("Table ", "")</text>
                                    }
                                </small>
                                <a asp-action="OrderDetails" asp-route-id="@order.Id"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status.ToLower() switch
        {
            "pending" => "warning",
            "preparing" => "info",
            "ready" => "primary",
            "completed" => "success",
            "cancelled" => "danger",
            _ => "secondary"
        };
    }
}