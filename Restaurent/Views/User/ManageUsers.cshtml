@model List<Models.User>

@{
    ViewData["Title"] = "Manage Users";
    var userSessionJson = Context.Session.GetString("CurrentUser");
    var currentUserEmail = "";
    if (!string.IsNullOrEmpty(userSessionJson))
    {
        try
        {
            var userSession = System.Text.Json.JsonSerializer.Deserialize<dynamic>(userSessionJson);
            currentUserEmail = userSession.GetProperty("email").GetString();
        }
        catch { }
    }

    var searchTerm = ViewData["SearchTerm"] as string ?? "";
    var searchBy = ViewData["SearchBy"] as string ?? "all";
    var totalResults = ViewData["TotalResults"] as int? ?? Model.Count;
}

<div class="container-fluid px-3 px-md-4 px-lg-5 mt-3 mt-md-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg">
                <div class="card-header btn btn-primary text-white">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                        <h3 class="mb-2 mb-md-0">
                            <i class="fas fa-users-cog"></i> Manage Users
                        </h3>
                        <span class="badge bg-warning text-dark fs-6">
                            <i class="fas fa-crown"></i> Super Admin Panel
                        </span>
                    </div>
                </div>
                <div class="card-body p-3 p-md-4">
                    <!-- رسائل التنبيه -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- شريط البحث المتقدم -->
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="fas fa-search"></i> Advanced Search
                            </h5>
                        </div>
                        <div class="card-body p-3 p-md-4">
                            <form method="get" asp-action="ManageUsers" class="row g-2 g-md-3">
                                <div class="col-12 col-md-6">
                                    <label for="search" class="form-label">Search Term</label>
                                    <input type="text" class="form-control" id="search" name="search" 
                                           value="@searchTerm" placeholder="Enter name, email, or phone...">
                                </div>
                                <div class="col-12 col-md-4">
                                    <label for="searchBy" class="form-label">Search In</label>
                                    <select class="form-select" id="searchBy" name="searchBy">
                                        <option value="all" selected="@(searchBy == "all")">All Fields</option>
                                        <option value="name" selected="@(searchBy == "name")">Name Only</option>
                                        <option value="email" selected="@(searchBy == "email")">Email Only</option>
                                        <option value="phone" selected="@(searchBy == "phone")">Phone Only</option>
                                    </select>
                                </div>
                                <div class="col-12 col-md-2 d-flex align-items-end">
                                    <div class="btn-group w-100">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-search"></i> <span class="d-none d-md-inline">Search</span>
                                        </button>
                                        @if (!string.IsNullOrEmpty(searchTerm))
                                        {
                                            <a asp-action="ManageUsers" class="btn btn-outline-secondary">
                                                <i class="fas fa-times"></i>
                                            </a>
                                        }
                                    </div>
                                </div>
                            </form>

                            <!-- نتائج البحث -->
                            @if (!string.IsNullOrEmpty(searchTerm))
                            {
                                <div class="mt-3 p-3 bg-info bg-opacity-10 border-start border-info border-4">
                                    <div class="row">
                                        <div class="col-md-6 mb-2 mb-md-0">
                                            <strong>Search Results:</strong>
                                            <span class="badge bg-primary ms-2">@totalResults users found</span>
                                        </div>
                                        <div class="col-md-6 text-md-end">
                                            <small class="text-muted">
                                                Searching for "<strong>@searchTerm</strong>" in 
                                                <strong>
                                                    @(searchBy switch {
                                                        "all" => "All Fields",
                                                        "name" => "Name",
                                                        "email" => "Email",
                                                        "phone" => "Phone",
                                                        _ => "All Fields"
                                                    })
                                                </strong>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- إحصائيات -->
                    <div class="row mb-4 g-2 g-md-3">
                        <div class="col-6 col-md-3">
                            <div class="card bg-info text-white h-100">
                                <div class="card-body text-center p-2 p-md-3">
                                    <h4 class="mb-1">@Model.Count</h4>
                                    <p class="mb-0 small">Total Users</p>
                                    @if (!string.IsNullOrEmpty(searchTerm))
                                    {
                                        <small>Filtered: @totalResults</small>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="card bg-success text-white h-100">
                                <div class="card-body text-center p-2 p-md-3">
                                    <h4 class="mb-1">@Model.Count(u => u.IsAdmin)</h4>
                                    <p class="mb-0 small">Admins</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="card bg-warning text-dark h-100">
                                <div class="card-body text-center p-2 p-md-3">
                                    <h4 class="mb-1">@Model.Count(u => !u.IsAdmin)</h4>
                                    <p class="mb-0 small">Regular Users</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="card bg-danger text-white h-100">
                                <div class="card-body text-center p-2 p-md-3">
                                    <h4 class="mb-1">@Model.Count(u => u.Email == "medo03459@gmail.com" || u.Email == "4dm1n@gmail.com")</h4>
                                    <p class="mb-0 small">Super Admins</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- جدول المستخدمين -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="usersTable">
                            <thead class="table-dark">
                                <tr>
                                    <th class="d-none d-md-table-cell">Profile</th>
                                    <th>User Info</th>
                                    <th class="d-none d-lg-table-cell">Contact</th>
                                    <th>Status</th>
                                    <th class="d-none d-sm-table-cell">Registration</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    var isSuperAdmin = user.Email == "medo03459@gmail.com" || user.Email == "4dm1n@gmail.com";
                                    var isCurrentUser = user.Email == currentUserEmail;
                                    
                                    <tr>
                                        <td class="d-none d-md-table-cell">
                                            <div class="profile-image-container">
                                                @if (!string.IsNullOrEmpty(user.ImageURL))
                                                {
                                                    <img src="@user.ImageURL" alt="Profile" 
                                                         class="profile-image"
                                                         onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                                }
                                                <div class="profile-placeholder @(string.IsNullOrEmpty(user.ImageURL) ? "d-flex" : "d-none")">
                                                    <i class="fas fa-user text-white"></i>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="profile-image-container d-md-none me-3">
                                                    @if (!string.IsNullOrEmpty(user.ImageURL))
                                                    {
                                                        <img src="@user.ImageURL" alt="Profile" 
                                                             class="profile-image profile-image-sm"
                                                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                                    }
                                                    <div class="profile-placeholder profile-placeholder-sm @(string.IsNullOrEmpty(user.ImageURL) ? "d-flex" : "d-none")">
                                                        <i class="fas fa-user text-white"></i>
                                                    </div>
                                                </div>
                                                <div>
                                                    <strong class="d-block">@user.UserName</strong>
                                                    <small class="text-muted d-block">@user.Email</small>
                                                    <span class="badge bg-secondary mt-1">Age: @user.Age</span>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="d-none d-lg-table-cell">
                                            @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                            {
                                                <div class="d-flex align-items-center mb-1">
                                                    <i class="fas fa-phone text-success me-2"></i>
                                                    <span>@user.PhoneNumber</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No phone</span>
                                            }
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-birthday-cake text-muted me-2"></i>
                                                <small class="text-muted">@user.Birthday.ToString("dd MMM yyyy")</small>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column gap-1">
                                                @if (isSuperAdmin)
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-crown"></i> <span class="d-none d-sm-inline">Super Admin</span>
                                                    </span>
                                                }
                                                else if (user.IsAdmin)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-user-shield"></i> <span class="d-none d-sm-inline">Admin</span>
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-user"></i> <span class="d-none d-sm-inline">User</span>
                                                    </span>
                                                }
                                                @if (isCurrentUser)
                                                {
                                                    <small class="text-primary">
                                                        <i class="fas fa-star"></i> <span class="d-none d-sm-inline">It's You</span>
                                                    </small>
                                                }
                                            </div>
                                        </td>
                                        <td class="d-none d-sm-table-cell">
                                            <div class="d-flex flex-column">
                                                <small>
                                                    <i class="fas fa-calendar me-1"></i>
                                                    @user.CreatedAt.ToString("dd MMM yyyy")
                                                </small>
                                                @if (user.UpdatedAt.HasValue)
                                                {
                                                    <small class="text-muted">
                                                        Updated: @user.UpdatedAt.Value.ToString("dd MMM yyyy")
                                                    </small>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <div class="action-buttons">
                                                <!-- زر التعديل -->
                                                <a asp-action="Edit" asp-route-id="@user.Id" 
                                                   class="btn btn-sm btn-outline-primary mb-1" 
                                                   title="Edit User">
                                                    <i class="fas fa-edit"></i>
                                                    <span class="d-none d-lg-inline ms-1">Edit</span>
                                                </a>

                                                <!-- زر تغيير الصلاحية (غير متاح للسوبر أدمن) -->
                                                @if (!isSuperAdmin)
                                                {
                                                    <form asp-action="ToggleAdmin" method="post" class="d-inline-block mb-1">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@user.Id" />
                                                        <button type="submit" 
                                                                class="btn btn-sm @(user.IsAdmin ? "btn-outline-warning" : "btn-outline-success")"
                                                                title="@(user.IsAdmin ? "Demote to User" : "Promote to Admin")"
                                                                onclick="return confirm('Are you sure you want to @(user.IsAdmin ? "demote" : "promote") this user?')">
                                                            <i class="fas @(user.IsAdmin ? "fa-user" : "fa-user-shield")"></i>
                                                            <span class="d-none d-lg-inline ms-1">@(user.IsAdmin ? "Demote" : "Promote")</span>
                                                        </button>
                                                    </form>
                                                }

                                                <!-- زر الحذف (غير متاح للسوبر أدمن أو المستخدم الحالي) -->
                                                @if (!isSuperAdmin && !isCurrentUser)
                                                {
                                                    <form asp-action="DeleteUser" method="post" class="d-inline-block mb-1">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@user.Id" />
                                                        <button type="submit" 
                                                                class="btn btn-sm btn-outline-danger"
                                                                title="Delete User"
                                                                onclick="return confirm('Are you sure you want to delete this user? This action cannot be undone.')">
                                                            <i class="fas fa-trash"></i>
                                                            <span class="d-none d-lg-inline ms-1">Delete</span>
                                                        </button>
                                                    </form>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- رسالة إذا لم يكن هناك مستخدمين -->
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-4x text-muted mb-3"></i>
                            <h4 class="text-muted">
                                @if (!string.IsNullOrEmpty(searchTerm))
                                {
                                    @:No Users Found
                                }
                                else
                                {
                                    @:No Users Available
                                }
                            </h4>
                            <p class="text-muted">
                                @if (!string.IsNullOrEmpty(searchTerm))
                                {
                                    @:No users found matching your search criteria.
                                }
                                else
                                {
                                    @:There are no users to display.
                                }
                            </p>
                            @if (!string.IsNullOrEmpty(searchTerm))
                            {
                                <a asp-action="ManageUsers" class="btn btn-primary">
                                    <i class="fas fa-undo"></i> Show All Users
                                </a>
                            }
                        </div>
                    }
                </div>
                <div class="card-footer text-muted p-3 p-md-4">
                    <div class="row">
                        <div class="col-md-6 mb-2 mb-md-0">
                            <small>
                                <i class="fas fa-info-circle"></i>
                                Super Admins cannot be modified or deleted.
                            </small>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <small>
                                Last updated: @DateTime.Now.ToString("dd MMM yyyy HH:mm")
                                @if (!string.IsNullOrEmpty(searchTerm))
                                {
                                    <span class="badge bg-info ms-2">Search Active</span>
                                }
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // تهيئة DataTable مع الاستجابة للشاشات الصغيرة
            $('#usersTable').DataTable({
                "pageLength": 10,
                "order": [[4, 'desc']], // ترتيب حسب تاريخ التسجيل
                "responsive": true,
                "language": {
                    "search": "Filter within results:",
                    "lengthMenu": "Show _MENU_ users per page",
                    "info": "Showing _START_ to _END_ of _TOTAL_ users",
                    "paginate": {
                        "previous": "<i class='fas fa-chevron-left'></i>",
                        "next": "<i class='fas fa-chevron-right'></i>"
                    }
                },
                "dom": '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>rt<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>'
            });

            // حل مشكلة الصور المرتعشة - معالجة أخطاء تحميل الصور
            document.querySelectorAll('.profile-image').forEach(img => {
                // منع التحميل المتكرر في حالة الخطأ
                img.addEventListener('error', function() {
                    if (!this.hasAttribute('data-error-handled')) {
                        this.setAttribute('data-error-handled', 'true');
                        this.style.display = 'none';
                        const placeholder = this.nextElementSibling;
                        if (placeholder && placeholder.classList.contains('profile-placeholder')) {
                            placeholder.style.display = 'flex';
                        }
                    }
                });

                // التأكد من تحميل الصورة بنجاح
                img.addEventListener('load', function() {
                    this.style.display = 'block';
                    const placeholder = this.nextElementSibling;
                    if (placeholder && placeholder.classList.contains('profile-placeholder')) {
                        placeholder.style.display = 'none';
                    }
                });
            });

            // إضافة تأثيرات عند التمرير
            $('tr').hover(
                function () {
                    $(this).addClass('shadow-sm');
                },
                function () {
                    $(this).removeClass('shadow-sm');
                }
            );

            // التركيز على حقل البحث عند تحميل الصفحة إذا كان هناك بحث سابق
            @if (!string.IsNullOrEmpty(searchTerm))
            {
                @:$('#search').focus();
            }

            // إظهار/إخفاء زر Clear Search
            $('#search').on('input', function() {
                var clearBtn = $('a[asp-action="ManageUsers"]');
                if ($(this).val().trim() !== '') {
                    clearBtn.show();
                } else {
                    clearBtn.hide();
                }
            });

            // تحسين الأداء على الأجهزة المحمولة
            if (window.innerWidth < 768) {
                // تبسيط الجدول للشاشات الصغيرة
                $('.table').addClass('table-sm');
            }
        });

        // وظيفة إضافية لمعالجة أخطاء الصور
        function handleImageError(img) {
            img.style.display = 'none';
            const placeholder = img.nextElementSibling;
            if (placeholder && placeholder.classList.contains('profile-placeholder')) {
                placeholder.style.display = 'flex';
            }
        }
    </script>

    <style>
        /* تحسينات عامة للاستجابة */
        .table th {
            border-top: none;
            font-weight: 600;
        }

        .badge {
            font-size: 0.75em;
        }

        .card {
            border: none;
            transition: transform 0.2s;
        }

        .card:hover {
            transform: translateY(-2px);
        }

        .table-responsive {
            border-radius: 0.5rem;
            overflow: hidden;
        }

        #usersTable_wrapper {
            padding: 0;
        }

        .dataTables_filter input {
            border: 2px solid #dee2e6;
            border-radius: 0.375rem;
            padding: 0.375rem 0.75rem;
        }

        .dataTables_filter input:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }

        .bg-opacity-10 {
            background-color: rgba(var(--bs-info-rgb), 0.1) !important;
        }

        /* تحسينات خاصة بالصور لمنع الارتعاش */
        .profile-image-container {
            position: relative;
            display: inline-block;
        }

        .profile-image {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 50%;
            display: block;
        }

        .profile-image-sm {
            width: 40px;
            height: 40px;
        }

        .profile-placeholder {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: #6c757d;
            display: none;
            align-items: center;
            justify-content: center;
        }

        .profile-placeholder-sm {
            width: 40px;
            height: 40px;
        }

        .profile-placeholder i {
            font-size: 1.2rem;
        }

        /* تحسينات الأزرار */
        .action-buttons {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

        .action-buttons .btn {
            width: 100%;
            justify-content: center;
        }

        /* تحسينات خاصة بالشاشات الصغيرة */
        @@media (max-width: 576px) {
            .container-fluid {
                padding-left: 10px;
                padding-right: 10px;
            }
            
            .card-body {
                padding: 1rem;
            }
            
            .action-buttons {
                gap: 0.5rem;
            }
            
            .action-buttons .btn {
                min-width: auto;
                padding: 0.375rem 0.75rem;
            }
            
            .table td, .table th {
                padding: 0.5rem;
            }
            
            .badge {
                font-size: 0.65em;
            }

            .profile-image, .profile-placeholder {
                width: 40px;
                height: 40px;
            }
        }

        /* تحسينات للشاشات المتوسطة */
        @@media (max-width: 768px) {
            .table-responsive {
                font-size: 0.9rem;
            }
            
            .card-header h3 {
                font-size: 1.5rem;
            }
            
            .card-header h5 {
                font-size: 1.2rem;
            }

            .action-buttons {
                flex-direction: row;
                flex-wrap: wrap;
            }

            .action-buttons .btn {
                flex: 1;
                min-width: 70px;
            }
        }

        /* تحسينات للشاشات الكبيرة */
        @@media (min-width: 992px) {
            .container-fluid {
                max-width: 95%;
            }

            .action-buttons {
                flex-direction: row;
                gap: 0.25rem;
            }

            .action-buttons .btn {
                width: auto;
            }
        }

        /* تحسينات للشاشات الكبيرة جداً */
        @@media (min-width: 1200px) {
            .container-fluid {
                max-width: 90%;
            }
        }

        /* تحسينات خاصة بالجدول في وضعية العرض الأفقي */
        @@media (max-width: 768px) and (orientation: landscape) {
            .table-responsive {
                max-height: 60vh;
                overflow-y: auto;
            }
        }

        /* منع اختيار النص لتحسين الأداء على اللمس */
        .table-responsive {
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        /* تحسينات للأجهزة التي تدعم اللمس */
        @@media (hover: none) and (pointer: coarse) {
            .btn {
                padding: 0.5rem 0.75rem;
                min-height: 44px;
            }
            
            .table td, .table th {
                padding: 0.75rem 0.5rem;
            }
        }
    </style>
}