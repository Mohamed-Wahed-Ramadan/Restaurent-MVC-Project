@model List<Restaurent.Models.User>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white">
                    <h3><i class="fas fa-users-cog"></i> User Management</h3>
                    <p class="mb-0">Super Admin Panel - Manage user permissions</p>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <!-- إضافة AntiForgery Token مخفي -->
                    @Html.AntiForgeryToken()

                    <!-- Search Bar -->
                    <div class="row mb-4">
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-text bg-primary text-white">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" id="searchInput" class="form-control"
                                       placeholder="Search users by name, email, phone, age, or status...">
                                <button class="btn btn-outline-secondary" type="button" id="clearSearch">
                                    <i class="fas fa-times"></i> Clear
                                </button>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex gap-2">
                                <select id="statusFilter" class="form-select">
                                    <option value="">All Status</option>
                                    <option value="superadmin">Super Admin</option>
                                    <option value="admin">Admin</option>
                                    <option value="user">User</option>
                                </select>
                                <button class="btn btn-info" id="refreshBtn" title="Refresh">
                                    <i class="fas fa-sync-alt"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- User Statistics -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card text-white bg-primary">
                                <div class="card-body text-center">
                                    <h4 class="mb-0" id="totalUsers">@Model.Count</h4>
                                    <small>Total Users</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-white bg-success">
                                <div class="card-body text-center">
                                    <h4 class="mb-0" id="adminUsers">@Model.Count(u => u.IsAdmin && u.Email != "medo03459@gmail.com")</h4>
                                    <small>Admins</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-white bg-warning">
                                <div class="card-body text-center">
                                    <h4 class="mb-0" id="regularUsers">@Model.Count(u => !u.IsAdmin)</h4>
                                    <small>Regular Users</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-white bg-danger">
                                <div class="card-body text-center">
                                    <h4 class="mb-0" id="superAdminCount">@Model.Count(u => u.Email == "medo03459@gmail.com")</h4>
                                    <small>Super Admin</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="usersTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Age</th>
                                    <th>Registered</th>
                                    <th>Admin Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="usersTableBody">
                                @foreach (var user in Model)
                                {
                                    <tr id="user-row-@user.Id" class="user-row">
                                        <td>@user.Id</td>
                                        <td class="user-name">@user.Name</td>
                                        <td class="user-email">@user.Email</td>
                                        <td class="user-phone">@(user.Phone ?? "N/A")</td>
                                        <td class="user-age">@user.Age</td>
                                        <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                                        <td class="admin-status">
                                            @if (user.Email == "medo03459@gmail.com")
                                            {
                                                <span class="badge bg-warning">Super Admin</span>
                                            }
                                            else if (user.IsAdmin)
                                            {
                                                <span class="badge bg-success">Admin</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">User</span>
                                            }
                                        </td>
                                        <td>
                                            @if (user.Email != "medo03459@gmail.com")
                                            {
                                                <button class="btn btn-sm @(user.IsAdmin ? "btn-warning" : "btn-success") toggle-admin"
                                                        data-userid="@user.Id">
                                                    @if (user.IsAdmin)
                                                    {
                                                        <i class="fas fa-user-minus"> Demote</i>
                                                        
                                                                                                }
                                                    else
                                                    {
                                                        <i class="fas fa-user-plus"> Promote</i>
                                                        
                                                                                        }
                                                </button>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No actions</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- No Results Message -->
                    <div id="noResults" class="text-center d-none mt-4">
                        <div class="alert alert-warning">
                            <i class="fas fa-search fa-2x mb-3"></i>
                            <h4>No users found</h4>
                            <p class="mb-0">Try adjusting your search criteria</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // دالة البحث
            function performSearch() {
                var searchText = $('#searchInput').val().toLowerCase();
                var statusFilter = $('#statusFilter').val();
                var hasVisibleRows = false;

                $('.user-row').each(function() {
                    var $row = $(this);
                    var name = $row.find('.user-name').text().toLowerCase();
                    var email = $row.find('.user-email').text().toLowerCase();
                    var phone = $row.find('.user-phone').text().toLowerCase();
                    var age = $row.find('.user-age').text().toLowerCase();
                    var status = $row.find('.admin-status').text().toLowerCase();

                    var matchesSearch = name.includes(searchText) ||
                                      email.includes(searchText) ||
                                      phone.includes(searchText) ||
                                      age.includes(searchText) ||
                                      status.includes(searchText);

                    var matchesStatus = true;
                    if (statusFilter) {
                        if (statusFilter === 'superadmin') {
                            matchesStatus = status.includes('super admin');
                        } else if (statusFilter === 'admin') {
                            matchesStatus = status.includes('admin') && !status.includes('super admin');
                        } else if (statusFilter === 'user') {
                            matchesStatus = status.includes('user') && !status.includes('admin');
                        }
                    }

                    if (matchesSearch && matchesStatus) {
                        $row.show();
                        hasVisibleRows = true;
                    } else {
                        $row.hide();
                    }
                });

                // إظهار/إخفاء رسالة عدم وجود نتائج
                if (hasVisibleRows) {
                    $('#noResults').addClass('d-none');
                    $('#usersTable').show();
                } else {
                    $('#noResults').removeClass('d-none');
                    $('#usersTable').hide();
                }

                // تحديث الإحصائيات
                updateStatistics();
            }

            // دالة تحديث الإحصائيات
            function updateStatistics() {
                var visibleRows = $('.user-row:visible');
                var total = visibleRows.length;
                var admins = visibleRows.filter(function() {
                    return $(this).find('.admin-status').text().includes('Admin') &&
                           !$(this).find('.admin-status').text().includes('Super Admin');
                }).length;
                var regularUsers = visibleRows.filter(function() {
                    return $(this).find('.admin-status').text().includes('User');
                }).length;
                var superAdmins = visibleRows.filter(function() {
                    return $(this).find('.admin-status').text().includes('Super Admin');
                }).length;

                $('#totalUsers').text(total);
                $('#adminUsers').text(admins);
                $('#regularUsers').text(regularUsers);
                $('#superAdminCount').text(superAdmins);
            }

            // أحداث البحث
            $('#searchInput').on('input', function() {
                performSearch();
            });

            $('#statusFilter').on('change', function() {
                performSearch();
            });

            $('#clearSearch').click(function() {
                $('#searchInput').val('');
                $('#statusFilter').val('');
                performSearch();
            });

            $('#refreshBtn').click(function() {
                window.location.reload();
            });

            // البحث باستخدام زر Enter
            $('#searchInput').keypress(function(e) {
                if (e.which === 13) {
                    performSearch();
                }
            });

            // Toggle Admin functionality
            $('.toggle-admin').click(function () {
                var button = $(this);
                var userId = button.data('userid');
                var row = $('#user-row-' + userId);

                if (confirm('Are you sure you want to change this user\'s admin status?')) {
                    // إظهار حالة التحميل
                    button.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Processing...');

                    // الحصول على الـ AntiForgeryToken
                    var token = $('input[name="__RequestVerificationToken"]').val();

                    $.post('@Url.Action("ToggleAdmin", "User")',
                    {
                        id: userId,
                        __RequestVerificationToken: token
                    },
                    function (data) {
                        if (data.success) {
                            // تحديث الزر والحالة
                            if (data.isAdmin) {
                                button.removeClass('btn-success').addClass('btn-warning');
                                button.html('<i class="fas fa-user-minus"></i> Demote');
                                row.find('.admin-status').html('<span class="badge bg-success">Admin</span>');
                            } else {
                                button.removeClass('btn-warning').addClass('btn-success');
                                button.html('<i class="fas fa-user-plus"></i> Promote');
                                row.find('.admin-status').html('<span class="badge bg-secondary">User</span>');
                            }

                            // إعادة تطبيق البحث بعد التحديث
                            performSearch();

                            // إظهار رسالة نجاح
                            showAlert('success', data.message);
                        } else {
                            showAlert('error', data.message);
                        }

                        button.prop('disabled', false);
                    }).fail(function(xhr, status, error) {
                        showAlert('error', 'Error: ' + error);
                        button.prop('disabled', false).html('<i class="fas fa-redo"></i> Retry');
                    });
                }
            });

            // دالة لعرض التنبيهات
            function showAlert(type, message) {
                var alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
                var alertHtml = '<div class="alert ' + alertClass + ' alert-dismissible fade show mt-3" role="alert">' +
                    '<i class="fas ' + (type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle') + '"></i> ' +
                    message +
                    '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
                    '</div>';

                // إضافة التنبيه في أعلى الـ card body
                $('.card-body').prepend(alertHtml);

                // إخفاء التنبيه تلقائياً بعد 5 ثواني
                setTimeout(function() {
                    $('.alert').alert('close');
                }, 5000);
            }

            // تهيئة الإحصائيات أول مرة
            updateStatistics();
        });
    </script>

    <style>
        .card .card-body {
            padding: 1.5rem;
        }

        .input-group-text {
            border-radius: 0.375rem 0 0 0.375rem;
        }

        #searchInput {
            border-left: none;
        }

        #clearSearch {
            border-radius: 0 0.375rem 0.375rem 0;
        }

        .stat-card {
            transition: transform 0.2s;
        }

            .stat-card:hover {
                transform: translateY(-2px);
            }

        #noResults {
            transition: all 0.3s ease;
        }
    </style>
}