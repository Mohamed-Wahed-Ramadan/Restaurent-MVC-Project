@model List<Models.User>

@{
    ViewData["Title"] = "Manage Users";
    var userSessionJson = Context.Session.GetString("CurrentUser");
    var currentUserEmail = "";
    if (!string.IsNullOrEmpty(userSessionJson))
    {
        try
        {
            var userSession = System.Text.Json.JsonSerializer.Deserialize<dynamic>(userSessionJson);
            currentUserEmail = userSession.GetProperty("email").GetString();
        }
        catch { }
    }

    var searchTerm = ViewData["SearchTerm"] as string ?? "";
    var searchBy = ViewData["SearchBy"] as string ?? "all";
    var totalResults = ViewData["TotalResults"] as int? ?? Model.Count;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="fas fa-users-cog"></i> Manage Users
                        </h3>
                        <span class="badge bg-warning text-dark">
                            <i class="fas fa-crown"></i> Super Admin Panel
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <!-- رسائل التنبيه -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- شريط البحث المتقدم -->
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="fas fa-search"></i> Advanced Search
                            </h5>
                        </div>
                        <div class="card-body">
                            <form method="get" asp-action="ManageUsers" class="row g-3">
                                <div class="col-md-6">
                                    <label for="search" class="form-label">Search Term</label>
                                    <input type="text" class="form-control" id="search" name="search" 
                                           value="@searchTerm" placeholder="Enter name, email, or phone...">
                                </div>
                                <div class="col-md-4">
                                    <label for="searchBy" class="form-label">Search In</label>
                                    <select class="form-select" id="searchBy" name="searchBy">
                                        <option value="all" selected="@(searchBy == "all")">All Fields</option>
                                        <option value="name" selected="@(searchBy == "name")">Name Only</option>
                                        <option value="email" selected="@(searchBy == "email")">Email Only</option>
                                        <option value="phone" selected="@(searchBy == "phone")">Phone Only</option>
                                    </select>
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <div class="btn-group w-100">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-search"></i> Search
                                        </button>
                                        @if (!string.IsNullOrEmpty(searchTerm))
                                        {
                                            <a asp-action="ManageUsers" class="btn btn-outline-secondary">
                                                <i class="fas fa-times"></i>
                                            </a>
                                        }
                                    </div>
                                </div>
                            </form>

                            <!-- نتائج البحث -->
                            @if (!string.IsNullOrEmpty(searchTerm))
                            {
                                <div class="mt-3 p-3 bg-info bg-opacity-10 border-start border-info border-4">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <strong>Search Results:</strong>
                                            <span class="badge bg-primary ms-2">@totalResults users found</span>
                                        </div>
                                        <div class="col-md-6 text-end">
                                            <small class="text-muted">
                                                Searching for "<strong>@searchTerm</strong>" in 
                                                <strong>
                                                    @(searchBy switch {
                                                        "all" => "All Fields",
                                                        "name" => "Name",
                                                        "email" => "Email",
                                                        "phone" => "Phone",
                                                        _ => "All Fields"
                                                    })
                                                </strong>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                   

                    <!-- جدول المستخدمين -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="usersTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>Profile</th>
                                    <th>User Info</th>
                                    <th>Contact</th>
                                    <th>Status</th>
                                    <th>Registration</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    var isSuperAdmin = user.Email == "medo03459@gmail.com" || user.Email == "4dm1n@gmail.com";
                                    var isCurrentUser = user.Email == currentUserEmail;
                                    
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(user.ImageURL))
                                            {
                                                <img src="@user.ImageURL" alt="Profile" 
                                                     class="rounded-circle" 
                                                     style="width: 50px; height: 50px; object-fit: cover;"
                                                     onerror="this.src='/images/default-user.png'">
                                            }
                                            else
                                            {
                                                <div class="rounded-circle d-flex align-items-center justify-content-center"
                                                     style="width: 50px; height: 50px; background: #6c757d;">
                                                    <i class="fas fa-user text-white"></i>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <strong>@user.UserName</strong>
                                            <br>
                                            <small class="text-muted">@user.Email</small>
                                            <br>
                                            <span class="badge bg-secondary">Age: @user.Age</span>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                            {
                                                <i class="fas fa-phone text-success"></i>
                                                @user.PhoneNumber
                                            }
                                            else
                                            {
                                                <span class="text-muted">No phone</span>
                                            }
                                            <br>
                                            <small class="text-muted">
                                                <i class="fas fa-birthday-cake"></i>
                                                @user.Birthday.ToString("dd MMM yyyy")
                                            </small>
                                        </td>
                                        <td>
                                            @if (isSuperAdmin)
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-crown"></i> Super Admin
                                                </span>
                                            }
                                            else if (user.IsAdmin)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-user-shield"></i> Admin
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="fas fa-user"></i> User
                                                </span>
                                            }
                                            <br>
                                            @if (isCurrentUser)
                                            {
                                                <small class="text-primary">
                                                    <i class="fas fa-star"></i> It's You
                                                </small>
                                            }
                                        </td>
                                        <td>
                                            <small>
                                                <i class="fas fa-calendar"></i>
                                                @user.CreatedAt.ToString("dd MMM yyyy")
                                            </small>
                                            <br>
                                            @if (user.UpdatedAt.HasValue)
                                            {
                                                <small class="text-muted">
                                                    Updated: @user.UpdatedAt.Value.ToString("dd MMM yyyy")
                                                </small>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <!-- زر التعديل -->
                                                <a asp-action="Edit" asp-route-id="@user.Id" 
                                                   class="btn btn-sm btn-outline-primary" 
                                                   title="Edit User">
                                                    <i class="fas fa-edit"></i>
                                                </a>

                                                <!-- زر تغيير الصلاحية (غير متاح للسوبر أدمن) -->
                                                @if (!isSuperAdmin)
                                                {
                                                    <form asp-action="ToggleAdmin" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@user.Id" />
                                                        <button type="submit" 
                                                                class="btn btn-sm @(user.IsAdmin ? "btn-outline-warning" : "btn-outline-success")"
                                                                title="@(user.IsAdmin ? "Demote to User" : "Promote to Admin")"
                                                                onclick="return confirm('Are you sure you want to @(user.IsAdmin ? "demote" : "promote") this user?')">
                                                            <i class="fas @(user.IsAdmin ? "fa-user" : "fa-user-shield")"></i>
                                                        </button>
                                                    </form>
                                                }

                                                <!-- زر الحذف (غير متاح للسوبر أدمن أو المستخدم الحالي) -->
                                                @if (!isSuperAdmin && !isCurrentUser)
                                                {
                                                    <form asp-action="DeleteUser" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@user.Id" />
                                                        <button type="submit" 
                                                                class="btn btn-sm btn-outline-danger"
                                                                title="Delete User"
                                                                onclick="return confirm('Are you sure you want to delete this user? This action cannot be undone.')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- رسالة إذا لم يكن هناك مستخدمين -->
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-4x text-muted mb-3"></i>
                            <h4 class="text-muted">
                                @if (!string.IsNullOrEmpty(searchTerm))
                                {
                                    @:No Users Found
                                }
                                else
                                {
                                    @:No Users Available
                                }
                            </h4>
                            <p class="text-muted">
                                @if (!string.IsNullOrEmpty(searchTerm))
                                {
                                    @:No users found matching your search criteria.
                                }
                                else
                                {
                                    @:There are no users to display.
                                }
                            </p>
                            @if (!string.IsNullOrEmpty(searchTerm))
                            {
                                <a asp-action="ManageUsers" class="btn btn-primary">
                                    <i class="fas fa-undo"></i> Show All Users
                                </a>
                            }
                        </div>
                    }
                </div>
                <div class="card-footer text-muted">
                    <div class="row">
                        <div class="col-md-6">
                            <small>
                                <i class="fas fa-info-circle"></i>
                                Super Admins cannot be modified or deleted.
                            </small>
                        </div>
                        <div class="col-md-6 text-end">
                            <small>
                                Last updated: @DateTime.Now.ToString("dd MMM yyyy HH:mm")
                                @if (!string.IsNullOrEmpty(searchTerm))
                                {
                                    <span class="badge bg-info ms-2">Search Active</span>
                                }
                            </small>
                        </div>
                    </div>
                    <br />
                    <!-- إحصائيات -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-info text-white">
                                <div class="card-body text-center">
                                    <h4>@Model.Count</h4>
                                    <p class="mb-0">Total Users</p>
                                    @if (!string.IsNullOrEmpty(searchTerm))
                                    {
                                        <small>Filtered: @totalResults</small>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <h4>@Model.Count(u => u.IsAdmin)</h4>
                                    <p class="mb-0">Admins</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-dark">
                                <div class="card-body text-center">
                                    <h4>@Model.Count(u => !u.IsAdmin)</h4>
                                    <p class="mb-0">Regular Users</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-danger text-white">
                                <div class="card-body text-center">
                                    <h4>@Model.Count(u => u.Email == "medo03459@gmail.com" || u.Email == "4dm1n@gmail.com")</h4>
                                    <p class="mb-0">Super Admins</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                 
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // تهيئة DataTable
            $('#usersTable').DataTable({
                "pageLength": 10,
                "order": [[4, 'desc']], // ترتيب حسب تاريخ التسجيل
                "language": {
                    "search": "Filter within results:",
                    "lengthMenu": "Show _MENU_ users per page",
                    "info": "Showing _START_ to _END_ of _TOTAL_ users",
                    "paginate": {
                        "previous": "<i class='fas fa-chevron-left'></i>",
                        "next": "<i class='fas fa-chevron-right'></i>"
                    }
                },
                "dom": '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>rt<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>'
            });

            // إضافة تأثيرات عند التمرير
            $('tr').hover(
                function () {
                    $(this).addClass('shadow-sm');
                },
                function () {
                    $(this).removeClass('shadow-sm');
                }
            );

            // التركيز على حقل البحث عند تحميل الصفحة إذا كان هناك بحث سابق
            @if (!string.IsNullOrEmpty(searchTerm))
            {
                @:$('#search').focus();
            }

            // إظهار/إخفاء زر Clear Search
            $('#search').on('input', function() {
                var clearBtn = $('a[asp-action="ManageUsers"]');
                if ($(this).val().trim() !== '') {
                    clearBtn.show();
                } else {
                    clearBtn.hide();
                }
            });
        });
    </script>

    <style>
        .table th {
            border-top: none;
            font-weight: 600;
        }

        .badge {
            font-size: 0.75em;
        }

        .btn-group .btn {
            margin: 0 2px;
        }

        .card {
            border: none;
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-2px);
            }

        .table-responsive {
            border-radius: 0.5rem;
            overflow: hidden;
        }

        #usersTable_wrapper {
            padding: 0;
        }

        .dataTables_filter input {
            border: 2px solid #dee2e6;
            border-radius: 0.375rem;
            padding: 0.375rem 0.75rem;
        }

            .dataTables_filter input:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
            }

        .bg-opacity-10 {
            background-color: rgba(var(--bs-info-rgb), 0.1) !important;
        }
        /* تحسينات خاصة بصفحة إدارة المستخدمين */
    .users-grid {
        display: grid;
        gap: 1.5rem;
    }
    
    @@media (min-width: 768px) {
        .users-grid {
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        }
    }
    
    .user-card {
        background: linear-gradient(135deg, var(--white), var(--cream));
        border-radius: 15px;
        padding: 1.5rem;
        border-left: 5px solid var(--gold-light);
    }
    
    .stats-card {
        background: linear-gradient(135deg, var(--dark-gray), #3a3a3a);
        color: var(--white);
        border-radius: 15px;
        padding: 1.5rem;
        text-align: center;
        transition: all 0.3s ease;
    }
    
    .stats-card:hover {
        transform: translateY(-5px);
    }
    </style>
}