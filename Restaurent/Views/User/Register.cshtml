@model Restaurent.ViewModels.UserVm

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header btn btn-primary text-white" style="border-radius:10px 10px 0 0;">
                    <h3><i class="fas fa-user-plus"></i> Create Account</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Register" method="post" enctype="multipart/form-data" id="registerForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="FullName" class="form-label">
                                        <i class="fas fa-user"></i> Full Name *
                                    </label>
                                    <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Email" class="form-label">
                                        <i class="fas fa-envelope"></i> Email *
                                    </label>
                                    <div class="verify-container d-flex gap-2">
                                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" id="Email" />
                                        <button type="button" class="btn btn-secondary" id="verifyBtn" style="white-space: nowrap;">
                                            <i class="fas fa-check-circle"></i> Verify
                                        </button>
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <div id="verifyStatus" class="mt-2"></div>
                                </div>

                                <div class="form-group mb-3">
                                    <label class="form-label">
                                        <i class="fas fa-shield-alt"></i> Verification Code *
                                    </label>
                                    <input type="text" class="form-control" placeholder="Enter verification code" id="verificationCode" />
                                    <small class="form-text text-muted">Enter the code sent to your email</small>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="PhoneNumber" class="form-label">
                                        <i class="fas fa-phone"></i> Phone Number *
                                    </label>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Birthday" class="form-label">
                                        <i class="fas fa-birthday-cake"></i> Birthday *
                                    </label>
                                    <input asp-for="Birthday" type="date" class="form-control" />
                                    <span asp-validation-for="Birthday" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Password" class="form-label">
                                        <i class="fas fa-lock"></i> Password *
                                    </label>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="ConfirmPassword" class="form-label">
                                        <i class="fas fa-lock"></i> Confirm Password *
                                    </label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="ImageFile" class="form-label">
                                        <i class="fas fa-image"></i> Profile Image
                                    </label>
                                    <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                    <small class="form-text text-muted">Optional: Upload your profile picture (JPG, PNG, GIF)</small>
                                </div>
                            </div>
                        </div>

                        <input type="hidden" id="isEmailVerified" name="isEmailVerified" value="false" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                                <i class="fas fa-user-plus"></i> Register
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <p>
                                Already have an account?
                                <a asp-action="Login" class="text-decoration-none">Login here</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .verified-badge {
        background: linear-gradient(135deg, #28a745, #20c997);
        color: white;
        padding: 8px 15px;
        border-radius: 20px;
        font-size: 0.9rem;
        display: inline-block;
        animation: slideIn 0.3s ease-out;
    }

    .error-badge {
        background: linear-gradient(135deg, #dc3545, #c82333);
        color: white;
        padding: 8px 15px;
        border-radius: 20px;
        font-size: 0.9rem;
        display: inline-block;
        animation: slideIn 0.3s ease-out;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .verify-container {
        position: relative;
    }

    #verifyBtn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- EmailJS Library -->
    <script src="https://cdn.jsdelivr.net/npm/@@emailjs/browser@3/dist/email.min.js"></script>

    <script src="~/js/register-validation.js"></script>
}