@model Restaurent.ViewModels.AdminDashboardVM

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4">
    <h2><i class="fas fa-tachometer-alt"></i> Admin Dashboard</h2>

    <!-- إحصائيات سريعة -->
    <div class="row mb-4">
        <div class="col-6 col-md-3 mb-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.TotalProducts</h4>
                            <p class="mb-0">Total Products</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-utensils fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-3 mb-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.TotalOrders</h4>
                            <p class="mb-0">Total Orders</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-shopping-cart fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-3 mb-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.PendingOrders</h4>
                            <p class="mb-0">Pending Orders</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-3 mb-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.TodayRevenue.ToString("C2")</h4>
                            <p class="mb-0">Today's Revenue</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-money-bill-wave fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- القائمة الجانبية -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Admin Menu</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-controller="MenuProduct" asp-action="Create" class="list-group-item list-group-item-action">
                        <i class="fas fa-plus-circle me-2"></i>Add Product
                    </a>
                    <a asp-controller="Category" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fas fa-tags me-2"></i>Manage Categories
                    </a>
                    <a asp-controller="Admin" asp-action="Discounts" class="list-group-item list-group-item-action">
                        <i class="fas fa-tag me-2"></i>Manage Discounts
                    </a>
                    <a asp-controller="Admin" asp-action="ManageOrders" class="list-group-item list-group-item-action">
                        <i class="fas fa-clipboard-list me-2"></i>Manage Orders
                    </a>
                    <a asp-controller="User" asp-action="ManageUsers" class="list-group-item list-group-item-action">
                        <i class="fas fa-users-cog me-2"></i>Manage Users
                    </a>
                    <a asp-controller="Admin" asp-action="CleanupOldOrders" class="list-group-item list-group-item-action text-danger">
                        <i class="fas fa-trash me-2"></i>Cleanup Old Orders
                    </a>
                </div>
            </div>
        </div>

        <!-- المحتوى الرئيسي -->
        <div class="col-md-9">
            <!-- الطلبات الأخيرة -->
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-history me-2"></i>Recent Orders</h5>
                    <a asp-controller="Admin" asp-action="ManageOrders" class="btn btn-sm btn-light">View All</a>
                </div>
                <div class="card-body">
                    @if (Model.RecentOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Date</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Type</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders)
                                    {
                                        <tr>
                                            <td>@order.UniqueOrderId</td>
                                            <td>@order.CreatedAt.ToString("g")</td>
                                            <td>@order.Total.ToString("C2")</td>
                                            <td>
                                                <span class="badge bg-@GetStatusBadgeClass(order.Status)">
                                                    @order.Status
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@order.OrderType</span>
                                            </td>
                                            <td>
                                                <a href="#" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">No recent orders</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status.ToLower() switch
        {
            "pending" => "warning",
            "preparing" => "info",
            "ready" => "primary",
            "completed" => "success",
            "cancelled" => "danger",
            _ => "secondary"
        };
    }
}