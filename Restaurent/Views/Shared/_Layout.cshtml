    <style>
        /* تأثيرات الروابط */
        .hover-gold {
            transition: all 0.3s ease;
        }

            .hover-gold:hover {
                color: #ffd700 !important;
                transform: translateX(5px);
                text-decoration: none !important;
            }

        /* تأثيرات أيقونات السوشيال ميديا */
        .social-icons {
            display: flex;
            gap: 15px;
        }

        .social-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            text-decoration: none;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .social-icon:hover {
                transform: rotate(360deg) scale(1.1);
            }

            /* ألوان السوشيال ميديا الفعلية */
            .social-icon.facebook:hover {
                background: #1877f2;
                color: white;
            }

            .social-icon.twitter:hover {
                background: #1da1f2;
                color: white;
            }

            .social-icon.instagram:hover {
                background: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888);
                color: white;
            }

            .social-icon.youtube:hover {
                background: #ff0000;
                color: white;
            }

            /* تأثير إضافي للأيقونات */
            .social-icon::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
                transition: left 0.5s;
            }

            .social-icon:hover::before {
                left: 100%;
            }

        /* تحسينات للشاشات الصغيرة */
        @@media (max-width: 768px) {
            .social-icons {
                justify-content: center;
                margin-bottom: 1rem;
            }

            .container {
                text-align: center;
            }

            .d-flex.align-items-center {
                justify-content: center;
                text-align: center;
            }
        }

        /* تأثير للوجو */
        .logo-container {
            transition: all 0.3s ease;
        }

            .logo-container:hover {
                transform: scale(1.05);
            }

        /* تحسين النص */
        .text-muted {
            opacity: 0.8;
        }

            .text-muted:hover {
                opacity: 1;
            }
    </style>

    <script>
        // إضافة تأثيرات تفاعلية إضافية
        document.addEventListener('DOMContentLoaded', function() {
            // تأثير للروابط
            const links = document.querySelectorAll('.hover-gold');
            links.forEach(link => {
                link.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateX(8px)';
                });

                link.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateX(0)';
                });
            });

            // تأثير للأيقونات
            const socialIcons = document.querySelectorAll('.social-icon');
            socialIcons.forEach(icon => {
                icon.addEventListener('mouseenter', function() {
                    this.style.boxShadow = '0 5px 15px rgba(0,0,0,0.3)';
                });

                icon.addEventListener('mouseleave', function() {
                    this.style.boxShadow = 'none';
                });
            });

            // تأثير للوجو
            const logo = document.querySelector('img[alt="Restaurant Logo"]');
            if (logo) {
                logo.addEventListener('mouseenter', function() {
                    this.style.transform = 'rotate(5deg) scale(1.1)';
                });

                logo.addEventListener('mouseleave', function() {
                    this.style.transform = 'rotate(0) scale(1)';
                });
            }
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Auto-hide alerts
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);

        // Dark Mode functionality
        document.addEventListener("DOMContentLoaded", function () {
            const themeButton = document.getElementById("themeButton");

            function applyTheme(theme) {
                if (theme === "dark") {
                    document.body.classList.add("dark-mode");
                    document.querySelector(".navbar").classList.add("dark-mode");
                    themeButton.innerHTML = '<i class="fas fa-sun"></i>';
                    themeButton.title = "Light Mode";
                } else {
                    document.body.classList.remove("dark-mode");
                    document.querySelector(".navbar").classList.remove("dark-mode");
                    themeButton.innerHTML = '<i class="fas fa-moon"></i>';
                    themeButton.title = "Dark Mode";
                }
            }

            function getCookie(name) {
                const value = "; " + document.cookie;
                const parts = value.split("; " + name + "=");
                if (parts.length === 2) return parts.pop().split(";").shift();
            }

            const currentTheme = getCookie("theme") || "light";
            applyTheme(currentTheme);

            themeButton.addEventListener("click", function () {
                const newTheme = document.body.classList.contains("dark-mode") ? "light" : "dark";
                applyTheme(newTheme);

                // حفظ التفضيل في cookie
                document.cookie = `theme=${newTheme}; path=/; max-age=31536000`; // سنة

                // إرسال طلب للسيرفر لحفظ التفضيل (اختياري)
                fetch(`/Home/SetTheme?theme=${newTheme}`);
            });
        });

        // تحديث عدد عناصر السلة
        function updateCartCount() {
            $.get('@Url.Action("GetCartCount", "Cart")', function(data) {
                $('.cart-badge').text(data.count);
                if (data.count > 0) {
                    $('.cart-badge').show();
                } else {
                    $('.cart-badge').hide();
                }
            });
        }

        // إضافة إلى السلة
        function addToCart(productId, quantity = 1) {
            showLoading();
            $.post('@Url.Action("AddToCart", "Cart")', {
                productId: productId,
                quantity: quantity
            }, function(data) {
                hideLoading();
                if (data.success) {
                    updateCartCount();
                    showAlert('success', data.message);
                } else {
                    showAlert('error', data.message);
                }
            }).fail(function() {
                hideLoading();
                showAlert('error', 'An error occurred while adding to cart');
            });
        }

        // التبديل بين المفضلة
        function toggleFavorite(productId, button) {
            showLoading();
            $.post('@Url.Action("ToggleFavorite", "Favorite")', {
                productId: productId
            }, function(data) {
                hideLoading();
                if (data.success) {
                    if (data.isFavorite) {
                        $(button).addClass('active');
                        showAlert('success', data.message);
                    } else {
                        $(button).removeClass('active');
                        showAlert('info', data.message);
                    }
                } else {
                    showAlert('error', data.message);
                }
            }).fail(function() {
                hideLoading();
                showAlert('error', 'An error occurred while updating favorites');
            });
        }

        // عرض التنبيهات
        function showAlert(type, message) {
            var alertClass = type === 'success' ? 'alert-success' :
                            type === 'error' ? 'alert-danger' :
                            type === 'warning' ? 'alert-warning' : 'alert-info';

            var icon = type === 'success' ? 'fa-check-circle' :
                      type === 'error' ? 'fa-exclamation-circle' :
                      type === 'warning' ? 'fa-exclamation-triangle' : 'fa-info-circle';

            var alertHtml = `<div class="alert ${alertClass} alert-dismissible fade show alert-fixed" role="alert">
                <i class="fas ${icon} me-2"></i> ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>`;

            // إضافة التنبيه في منطقة التنبيهات
            $('.alert-fixed').append(alertHtml);

            // إخفاء التنبيه تلقائياً بعد 5 ثواني
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        }

        // إظهار spinner التحميل
        function showLoading() {
            $('#loadingSpinner').show();
        }

        // إخفاء spinner التحميل
        function hideLoading() {
            $('#loadingSpinner').hide();
        }

        // البحث في الوقت الحقيقي (اختياري)
        $('#searchInput').on('input', function() {
            var searchTerm = $(this).val();
            if (searchTerm.length >= 3) {
                // يمكنك إضافة بحث AJAX هنا
            }
        });

        // تحديث عدد السلة عند تحميل الصفحة
        $(document).ready(function() {
            updateCartCount();

            // إخفاء التنبيهات عند النقر خارجها
            $(document).on('click', function(e) {
                if (!$(e.target).closest('.alert').length) {
                    $('.alert').alert('close');
                }
            });
        });

        // منع إرسال النموذج إذا كان هناك تحميل
        $(document).on('submit', 'form', function() {
            if ($('#loadingSpinner').is(':visible')) {
                return false;
            }
        });
    </script>

