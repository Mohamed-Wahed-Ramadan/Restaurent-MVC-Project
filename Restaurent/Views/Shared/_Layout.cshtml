        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <!-- اسم المطعم على اليمين -->
                <a class="navbar-brand" asp-controller="MenuProduct" asp-action="GetAll">
                    <i class="fas fa-utensils"></i> Restaurant
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- كل العناصر على الشمال -->
                    <ul class="navbar-nav me-auto">
                        <!-- صفحة الهوم على الشمال -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="MenuProduct" asp-action="GetAll">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>

                        @{
                            var userSessionJson = Context.Session.GetString("CurrentUser");
                            var isLoggedIn = !string.IsNullOrEmpty(userSessionJson);
                            dynamic userSession = null;
                            var isAdmin = false;
                            var isSuperAdmin = false;
                            var userName = "";
                            var userEmail = "";
                            var userImage = "";
                            var userId = "";
                            var cartCount = Context.Session.GetInt32("CartCount") ?? 0;

                            if (isLoggedIn)
                            {
                                try
                                {
                                    userSession = System.Text.Json.JsonSerializer.Deserialize<dynamic>(userSessionJson);
                                    isAdmin = userSession.GetProperty("IsAdmin").GetBoolean();
                                    isSuperAdmin = userSession.GetProperty("Email").GetString() == "medo03459@gmail.com" ||
                                    userSession.GetProperty("Email").GetString() == "4dm1n@gmail.com";
                                    userName = userSession.GetProperty("UserName").GetString();
                                    userEmail = userSession.GetProperty("Email").GetString();
                                    userImage = userSession.GetProperty("ImageURL").GetString();
                                    userId = userSession.GetProperty("Id").GetString();
                                }
                                catch
                                {
                                    isLoggedIn = false;
                                }
                            }
                        }

                        @if (isLoggedIn)
                        {
                            <!-- زر السلة -->
                            <li class="nav-item">
                                <a class="nav-link nav-cart-icon" asp-controller="Cart" asp-action="Index" title="Shopping Cart">
                                    <i class="fas fa-shopping-cart"></i>
                                    @if (cartCount > 0)
                                    {
                                        <span class="cart-badge">@cartCount</span>
                                    }
                                </a>
                            </li>

                            <!-- زر المفضلة -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Favorite" asp-action="Index" title="My Favorites">
                                    <i class="fas fa-heart"></i>
                                </a>
                            </li>

                            <!-- زر الطلبات -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Order" asp-action="MyOrders" title="My Orders">
                                    <i class="fas fa-clipboard-list"></i>
                                </a>
                            </li>

                            <!-- Dropdown المستخدم -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center @(isAdmin ? "user-badge-admin" : "user-badge-user")"
                                   href="#" id="userDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    @if (!string.IsNullOrEmpty(userImage))
                                    {
                                        <img src="@userImage" alt="@userName" class="user-avatar-small me-2" />
                                    }
                                    else
                                    {
                                        <i class="fas @(isAdmin ? "fa-crown" : "fa-user") me-2"></i>
                                    }
                                    <span>@userName</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-start dropdown-menu-custom"
                                    aria-labelledby="userDropdown">

                                    <div class="dropdown-header-custom">
                                        <div class="text-center">
                                            @if (!string.IsNullOrEmpty(userImage))
                                            {
                                                <img src="@userImage" alt="@userName" class="user-avatar-large mb-2" />
                                            }
                                            else
                                            {
                                                <i class="fas @(isAdmin ? "fa-user-shield" : "fa-user-circle") fa-3x mb-2"></i>
                                            }
                                            <h6 class="mb-0">@userName</h6>
                                            <small>@userEmail</small>
                                            <br />
                                            <small>
                                                @if (isSuperAdmin)
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-crown"></i> Super Admin
                                                    </span>
                                                }
                                                else if (isAdmin)
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-user-shield"></i> Administrator
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">
                                                        <i class="fas fa-user"></i> Regular User
                                                    </span>
                                                }
                                            </small>
                                        </div>
                                    </div>

                                    <li>
                                        <a class="dropdown-item" asp-controller="User" asp-action="Details" asp-route-id="@userId">
                                            <i class="fas fa-user-circle me-2"></i> My Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="User" asp-action="Edit" asp-route-id="@userId">
                                            <i class="fas fa-edit me-2"></i> Edit Profile
                                        </a>
                                    </li>

                                    @if (isAdmin)
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                                <i class="fas fa-tachometer-alt me-2"></i> Admin Dashboard
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="MenuProduct" asp-action="Create">
                                                <i class="fas fa-plus-circle me-2"></i> Add Product
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Discounts">
                                                <i class="fas fa-tag me-2"></i> Manage Discounts
                                            </a>
                                        </li>
                                    }

                                    @if (isSuperAdmin)
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="User" asp-action="ManageUsers">
                                                <i class="fas fa-users-cog me-2"></i> Manage Users
                                            </a>
                                        </li>
                                    }

                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="User" asp-action="Logout" method="post" id="logoutForm">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger border-0 bg-transparent w-100 text-start">
                                                <i class="fas fa-sign-out-alt me-2"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <!-- Not Logged In -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white ms-2"
                                   asp-controller="User" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Register
                                </a>
                            </li>
                        }

                        <!-- Dark Mode Button -->
                        <li class="nav-item">
                            <button id="themeButton" class="btn btn-outline-light ms-2">
                                <i class="fas fa-moon"></i>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- منطقة التنبيهات -->
    <div class="alert-fixed">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
