                        </a>
                    </div>
                    <div class="mt-3">
                        <small class="footer-text">
                            <i class="fas fa-phone me-1"></i> +20 1123002663<br>
                            <i class="fas fa-envelope me-1"></i> mohamed.wahed.work@gmail.com
                        </small>
                    </div>
                </div>
            </div>
            <hr class="bg-secondary my-4" />
            <div class="text-center">
                <p class="mb-0 footer-text">
                    &copy; @DateTime.Now.Year - Restaurant Manager. All rights reserved. |
                    Made with <i class="fas fa-heart text-danger"></i> for food lovers
                </p>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Auto-hide alerts
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);

        // Dark Mode functionality
        document.addEventListener("DOMContentLoaded", function () {
            const themeButton = document.getElementById("themeButton");

            function applyTheme(theme) {
                if (theme === "dark") {
                    document.body.classList.add("dark-mode");
                    document.querySelector(".navbar").classList.add("dark-mode");
                    themeButton.innerHTML = '<i class="fas fa-sun"></i>';
                    themeButton.title = "Light Mode";
                } else {
                    document.body.classList.remove("dark-mode");
                    document.querySelector(".navbar").classList.remove("dark-mode");
                    themeButton.innerHTML = '<i class="fas fa-moon"></i>';
                    themeButton.title = "Dark Mode";
                }
            }

            function getCookie(name) {
                const value = "; " + document.cookie;
                const parts = value.split("; " + name + "=");
                if (parts.length === 2) return parts.pop().split(";").shift();
            }

            const currentTheme = getCookie("theme") || "light";
            applyTheme(currentTheme);

            themeButton.addEventListener("click", function () {
                const newTheme = document.body.classList.contains("dark-mode") ? "light" : "dark";
                applyTheme(newTheme);
                document.cookie = `theme=${newTheme}; path=/; max-age=31536000`;
            });
        });

        // تحديث عدد عناصر السلة
        function updateCartCount() {
            $.get('@Url.Action("GetCartCount", "Cart")', function(data) {
                $('.cart-badge').text(data.count);
                if (data.count > 0) {
                    $('.cart-badge').show();
                } else {
                    $('.cart-badge').hide();
                }
            });
        }

        // تحديث عدد السلة عند تحميل الصفحة
        $(document).ready(function() {
            updateCartCount();
        });

        // إضافة تأثيرات تفاعلية إضافية
        document.addEventListener('DOMContentLoaded', function() {
            // تأثير للروابط في الفوتر
            const footerLinks = document.querySelectorAll('.footer-link');
            footerLinks.forEach(link => {
                link.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateX(8px)';
                });

                link.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateX(0)';
                });
            });

            // تأثير للأيقونات
            const socialIcons = document.querySelectorAll('.social-icon');
            socialIcons.forEach(icon => {
                icon.addEventListener('mouseenter', function() {
                    this.style.boxShadow = '0 5px 15px rgba(0,0,0,0.3)';
                });

                icon.addEventListener('mouseleave', function() {
                    this.style.boxShadow = 'none';
                });
            });

            // تأثير للوجو
            const logo = document.querySelector('img[alt="Restaurant Logo"]');
            if (logo) {
                logo.addEventListener('mouseenter', function() {
                    this.style.transform = 'rotate(5deg) scale(1.1)';
                });

                logo.addEventListener('mouseleave', function() {
                    this.style.transform = 'rotate(0) scale(1)';
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>